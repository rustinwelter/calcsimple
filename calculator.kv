<Button>
    font_size: '40'
    background_color: (200/255, 200/255, 200/255, 0.3)

<Calculator>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: calc_field
            text: ''
            text_size: self.size
            font_size: '20'
            size_hint: (1, .05)
            halign: 'right'
            valign: 'middle'
            background_color: (0, 0, 0, 1)
            canvas.before:
                Color: 
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            id: input_field
            text: '0'
            text_size: self.size
            font_size: '60'
            size_hint: (1, .45)
            halign: 'right'
            valign: 'middle'
            background_color: (0, 0, 0, 1)
            canvas.before:
                Color: 
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos



        GridLayout:
            cols: 5

            Button:
                text: 'MC'
                on_press: root.clear_memory()
            Button:
                text: 'MR'
                on_press: root.memory_result()
            Button:
                text: 'M−'
                on_press: root.subtract_memory()
            Button:
                text: 'M+'
                on_press: root.add_memory()
            Button:
                text: '<x'
                on_press: root.delete()
            Button:
                text: '+/−'
                on_press: root.plus_minus()
            Button:
                text: '7'
                on_press: root.input('7')
            Button:
                text: '8'
                on_press: root.input('8')
            Button:
                text: '9'
                on_press: root.input('9')
            Button:
                text: '÷'
                on_press: root.calculate('÷')
            Button:
                text: 'C'
                on_press: root.clear()
            Button:
                text: '4'
                on_press: root.input('4')
            Button:
                text: '5'
                on_press: root.input('5')
            Button:
                text: '6'
                on_press: root.input('6')
            Button:
                text: '×'
                on_press: root.calculate('×')
            Button:
                text: 'AC'
                on_press: root.clear_all()
            Button:
                text: '1'
                on_press: root.input('1')
            Button:
                text: '2'
                on_press: root.input('2')
            Button:
                text: '3'
                on_press: root.input('3')
            Button:
                text: '−'
                on_press: root.calculate('−')
            Button:
                text: '0'
                on_press: root.input('0')
            Button:
                text: '00'
                on_press: root.add_zeros()
            Button:
                text: '.'
                on_press: root.decimal()
            Button:
                text: '='
                on_press: root.result()
            Button:
                id: add_button
                text: '+'
                on_press: root.calculate('+')


